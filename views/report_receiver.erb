<% @title = 'Gifts by Receiver' %>

<% @receivers.each do |r, gifts| %>
  <table class="persongifts">
  <caption><%=h r%></caption>
  <thead><tr><th>Time</th><th>Gift</th><th>Senders</th><th>Other Receivers</th></tr></thead>
  <tbody>
  <% gifts.each do |g| %>
    <tr><td><%= g.inserted_at.strftime('%I:%M:%S%p') %></td>
    <td><%=h g.name %></td>
    <td><%= g.senders.map{|x| h(x.name)}.join(', ') %></td>
    <td><%= (g.receivers.map{|x| h(x.name)} - [h(r)]).join(', ') %></td></tr>
  <% end %>
  </tbody></table>
<% end %>
