<% @title = 'Gifts in Chronological Order' %>

<%= Thamble.table(@gifts, :table=>{:class=>"table table-condensed table-bordered table-striped"}, :headers=>'Time,Gift,Senders,Receivers') do |g, t|
  [g.inserted_at.strftime('%I:%M:%S%p'), g.name, g.senders.map{|x| x.name}.join(', '), g.receivers.map{|x| x.name}.join(', ')]
end %>
